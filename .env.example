# Application
APP_NAME=Lattices API
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database (use Supabase connection string with +asyncpg scheme)
# Transaction mode pooler (port 6543) recommended for API workloads
DATABASE_URL=postgresql+asyncpg://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Supabase
# Found in: Supabase Dashboard > Project Settings > API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# JWT Authentication
# Use the JWT secret from: Supabase Dashboard > Project Settings > API > JWT Settings
JWT_SECRET_KEY=your-supabase-jwt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=3600

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
